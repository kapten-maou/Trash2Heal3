rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return request.auth.uid == uid;
    }
    
    function isCourier() {
      return request.auth != null && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.roles.courier == true;
    }
    
    function isValidImage() {
      return request.resource.size < 5 * 1024 * 1024 && // 5MB max
             request.resource.contentType.matches('image/.*');
    }
    
    function isValidDocument() {
      return request.resource.size < 10 * 1024 * 1024 && // 10MB max
             (request.resource.contentType.matches('application/pdf') ||
              request.resource.contentType.matches('image/.*'));
    }

    // User Profile Photos
    match /users/{uid}/profile/{filename} {
      allow read: if isAuthenticated();
      allow write: if isOwner(uid) && isValidImage();
      allow delete: if isOwner(uid);
    }

    // Pickup Proof Photos (Courier only)
    match /pickups/{requestId}/proof/{courierId}/{filename} {
      allow read: if isAuthenticated();
      allow write: if isOwner(courierId) && isCourier() && isValidImage();
      allow delete: if false; // Cannot delete proof photos
    }

    // Event Banners (Admin only)
    match /events/{eventId}/banner/{filename} {
      allow read: if true; // Public read
      allow write: if false; // Admin via backend only
    }

    // Event Item Photos (Admin only)
    match /events/{eventId}/items/{itemId}/{filename} {
      allow read: if true; // Public read
      allow write: if false; // Admin via backend only
    }

    // Chat Images
    match /chats/{threadId}/images/{messageId}/{filename} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isValidImage();
      allow delete: if false;
    }

    // Recycled Product Images (Admin only)
    match /products/{productId}/{filename} {
      allow read: if true; // Public read
      allow write: if false; // Admin via backend only
    }

    // KYC Documents (Courier registration)
    match /kyc/{uid}/{filename} {
      allow read: if isOwner(uid);
      allow write: if isOwner(uid) && isValidDocument();
      allow delete: if isOwner(uid);
    }

    // Default: deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}